<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="AppBundle\Entity\TbmVideo" table="tbm_video">
        <unique-constraints>
            <unique-constraint name="id_UNIQUE" columns="id"/>
        </unique-constraints>
        <id name="Id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="file_id" type="string" column="file_id" length="45" nullable="false">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="width" type="integer" column="width" nullable="false">
            <options>
                <option name="unsigned"/>
            </options>
        </field>
        <field name="height" type="integer" column="height" nullable="false">
            <options>
                <option name="unsigned"/>
            </options>
        </field>
        <field name="duration" type="integer" column="duration" nullable="false">
            <options>
                <option name="unsigned"/>
            </options>
        </field>
        <field name="thumb" type="integer" column="thumb" nullable="true">
            <options>
                <option name="unsigned">1</option>
            </options>
        </field>
        <field name="mimeType" type="string" column="mime_type" length="45" nullable="true">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="fileSize" type="integer" column="file_size" nullable="true">
            <options>
                <option name="unsigned"/>
            </options>
        </field>    
        <many-to-one field="thumb" target-entity="TbmPhotoSize" inversed-by="video_thumbs">
            <join-column name="thumb" referenced-column-name="id" />
        </many-to-one>
        <one-to-many field="messages" target-entity="TbmMessage" mapped-by="video" />
    </entity>
</doctrine-mapping>
