<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\TbmVoice" table="tbm_voice">
    <id name="file" association-key="true"/>
    <field name="duration" type="integer" column="duration" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="mimeType" type="string" column="mime_type" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fileSize" type="integer" column="file_size" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <one-to-one field="file" target-entity="TbmMessage" fetch="LAZY">
      <join-columns>
        <join-column name="file_id" referenced-column-name="voice"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
